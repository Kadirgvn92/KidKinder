@model List<KidClass>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Sınıf Bilgileri</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h2>Sınıf bilgilerini buradan görüntüleyebilirsiniz.</h2>
                        </div>
                    </div>
                    <div class="table_section padding_infor_info">
                        <div class="table-responsive-sm">
                            <table class="table table-striped text-dark">
                                <thead >
                                    <tr class=" text-dark font-weight-bold">
                                        <th scope="col">Foto</th>
                                        <th scope="col">Sınıf Adı</th>
                                        <th scope="col">Açıklama</th>
                                        <th scope="col">Yaş Aralığı</th>
                                        <th scope="col">Kapasite</th>
                                        <th scope="col">Sınıf Saatleri</th>
                                        <th scope="col">Fiyat</th>
                                        <th scope="col">Sil</th>
                                        <th scope="col">Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="align-middle">
                                                <img src="/classImages/@item.ImageUrl" style="border-radius:50%" width="80px" height="80px" />
                                            </td>
                                            <td class="align-middle">
                                                <span>
                                                    @item.Name
                                                </span>
                                            </td>
                                            <td class="align-middle">
                                                <span>
                                                    @item.Description
                                                </span>
                                            </td>
                                            <td class="align-middle">
                                                <span>
                                                    @item.AgeOfKids
                                                </span>
                                            </td>
                                            <td class="align-middle">
                                                <span>
                                                    @item.TotalSeats
                                                </span>
                                            </td>
                                            <td class="align-middle">
                                                <span>
                                                    @item.ClassTime
                                                </span>
                                            </td>
                                            <td class="align-middle">
                                                <span>
                                                    @item.TutionFee
                                                </span>
                                            </td>
                                            <td class="align-middle" width="120px"><a href="/Admin/Class/DeleteClass/@item.KidClassID" class="btn btn-danger">Sil</a></td>
                                            <td class="align-middle" width="120px"><a href="/Admin/Class/UpdateClass/@item.KidClassID" class="btn btn-warning">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <a href="/Admin/Class/CreateClass" class="btn btn-primary">Sınıf Oluştur</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
