
@model UpdateGetInTouchViewModel

@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>İletişim Bilgileri </h2>
                </div>
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h2>İletişim bilgisini buradan güncelleyebilirsiniz.</h2>
                        </div>
                    </div>
                    <div class="table_section padding_infor_info">
                        <div class="table-responsive-sm">
                            <!-- table section -->
                            <form method="post" enctype="multipart/form-data">
                                <input type="hidden" asp-for="GetInTouchID" />
                                <div class="form-group p-1">
                                    <label>Adres</label>
                                    <input type="text" class="form-control form-control-s" asp-for="Address">
                                </div>
                                <div class="form-group p-1">
                                    <label>Mail</label>
                                    <input type="email" class="form-control form-control-s" asp-for="Mail" >
                                </div>
                                <div class="form-group p-1">
                                    <label>Telefon</label>
                                    <input type="text" class="form-control form-control-s" asp-for="Phone">
                                </div>
                                <div class="form-group p-1">
                                    <label>Çalışma Saatleri</label>
                                    <input type="text" class="form-control form-control-s" asp-for="OpeningHours">
                                </div>
                                <div class="form-group p-1">
                                    <label>Çalışma Günleri</label>
                                    <input type="text" class="form-control form-control-s" asp-for="OpeningDays">
                                </div>
                                <button type="submit" class="btn btn-primary">İletişim Bilgisi Düzenle</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
