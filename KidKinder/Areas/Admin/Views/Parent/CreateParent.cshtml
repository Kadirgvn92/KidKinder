
@model CreateParentViewModel

@{
    ViewData["Title"] = "CreateParent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Ebeveyn Bilgileri </h2>
                </div>
            </div>
        </div>
        <!-- row -->

        <div class="row">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h2>Ebeveyn bilgisini buradan oluşturabilirsiniz.</h2>
                        </div>
                    </div>
                    <div class="table_section padding_infor_info">
                        <div class="table-responsive-sm">
                            <!-- table section -->
                            <form method="post" enctype="multipart/form-data">
                                <div class="form-group p-1">
                                    <label>Ebeveyn Adı</label>
                                    <input type="text" class="form-control form-control-s" asp-for="Name" placeholder="Ebeveyn Adını girin">
                                </div>
                                <div class="form-group p-1">
                                    <label>Telefon</label>
                                    <input type="text" class="form-control form-control-s" asp-for="Phone" placeholder="Telefon numarası girin">
                                </div>
                                <div class="form-group p-1">
                                    <label>2. Telefon</label>
                                    <input type="text" class="form-control form-control-s" asp-for="SecondPhone" placeholder="2. Telefon numarası girin">
                                </div>
                                <div class="form-group p-1">
                                    <label>Mail</label>
                                    <input type="text" class="form-control form-control-s" asp-for="Mail" placeholder="Mail adresi girin">
                                </div>
                                <div class="form-group p-1">
                                    <label>Adres</label>
                                    <textarea class="form-control form-control-s" asp-for="Address" placeholder="Adres girin"></textarea>
                                </div>
                                <div class="form-group p-1">
                                    <label>Toplam Borç</label>
                                    <input type="text" class="form-control form-control-s" asp-for="TotalDebt" placeholder="Varsa Toplam Borç girin">
                                </div>
                                <div class="form-group p-1">
                                    <label>Borç Açıklama</label>
                                    <input type="text" class="form-control form-control-s" asp-for="DebtDescription" placeholder="Varsa borç açıklama girin">
                                </div>
                                <button type="submit" class="btn btn-primary">Ebeveyn Kaydını Oluştur</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
