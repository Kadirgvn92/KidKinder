
@model UpdateTestimonialViewModel

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Yorum Bilgileri </h2>
                </div>
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h2>Yorum bilgisini buradan oluşturabilirsiniz.</h2>
                        </div>
                    </div>
                    <div class="table_section padding_infor_info">
                        <div class="table-responsive-sm">
                            <!-- table section -->
                            <form method="post" enctype="multipart/form-data">
                                <input type="hidden" asp-for="TestimonialID"/>
                                <input type="hidden" asp-for="ImageUrl"/>
                                <div class="form-group p-1">
                                    <label>Ad Soyad</label>
                                    <input type="text" class="form-control form-control-s" asp-for="Name" placeholder="Öğrenci adı girin">
                                </div>
                                <div class="form-group p-1">
                                    <label>Kimin Ebeveyni</label>
                                    <input type="text" class="form-control form-control-s" asp-for="WhosParent" placeholder="Ebeveyni girin">
                                </div>
                                <div class="form-group p-1">
                                    <label>Yorum</label>
                                    <textarea type="text" class="form-control form-control-s" asp-for="Comment" placeholder="Yorum girin"></textarea>
                                </div>
                                <div class="form-group p-1">
                                    <label>Sınıf Resmi</label>
                                    <input type="file" class="form-control form-control-s" asp-for="Image">
                                </div>
                                <button type="submit" class="btn btn-primary">Yorum Düzenle</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
