
@model CreateImageViewModel

@{
    ViewData["Title"] = "CreateImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Galeri Bilgileri </h2>
                </div>
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h2>Galeriye buradan resim ekleyebilirsiniz</h2>
                        </div>
                    </div>
                    <div class="table_section padding_infor_info">
                        <div class="table-responsive-sm">
                            <!-- table section -->
                            <form method="post" enctype="multipart/form-data">
                                <div class="form-group p-1">
                                    <label>Resim Adı</label>
                                    <input type="text" class="form-control form-control-s" asp-for="ImageName" placeholder="Resim adı girin">
                                </div>
                                <div class="form-group p-1">
                                    <label>Sınıf Resmi</label>
                                    <input type="file" class="form-control form-control-s" asp-for="Image" placeholder="Resim resmini girin">
                                </div>
                                <button type="submit" class="btn btn-primary">Resim Ekle</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
