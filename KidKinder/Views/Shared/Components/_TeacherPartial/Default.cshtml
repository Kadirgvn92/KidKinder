

@model List<Teacher>

<div class="container-fluid pt-5">
    <div class="container">
        <div class="text-center pb-2">
            <p class="section-title px-5">
                <span class="px-2">Öğretmenlerimiz</span>
            </p>
            <h1 class="mb-4">Öğretmenlerimiz İle Tanışın..</h1>
        </div>
        <div class="row">
            @foreach(var item in Model.Take(4))
            {
                <div class="col-md-6 col-lg-3 text-center team mb-5">
                    <div class="position-relative overflow-hidden mb-4"
                         style="border-radius: 100%">
                        <img height="250px" width="250px" src="/teacherImages/@item.ImageUrl" alt="" />
                        <div class="team-social d-flex align-items-center justify-content-center w-100 h-100 position-absolute">
                            <a class="btn btn-outline-light text-center mr-2 px-0"
                               style="width: 38px; height: 38px"
                               href="@item.InstagramUrl">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a class="btn btn-outline-light text-center mr-2 px-0"
                               style="width: 38px; height: 38px"
                               href="@item.FacebookUrl">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a class="btn btn-outline-light text-center px-0"
                               style="width: 38px; height: 38px"
                               href="@item.LinkedinUrl">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </div>
                    </div>
                    <h4>@item.Name</h4>
                    <i>Branş : @item.Branch</i>
                </div>
            }
            
        </div>
    </div>
</div>